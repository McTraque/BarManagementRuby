  <table class="table">
    <thead  class="thead-inverse">
      <tr style="color:#f2f2f2">
      <th>Email</th>
      <th>Rol</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr style="color:#f2f2f2">
        <td><%= employee.email %></td>
        <td><%= employee.role %></td>
        <td><%= link_to 'Mostrar', employee_path(employee) %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>

