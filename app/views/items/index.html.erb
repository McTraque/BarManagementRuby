<%if user_signed_in?%>
<p id="notice"><%= notice %></p>

<h1>Comanda</h1>

<p>Id: <%= @order.id %></p>
<p>Generado: <%= @order.created_at %></p>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Valor Unitario</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.sell_value, precision: 0) %></td>
        <td><%= number_to_currency(item.total, precision: 0) %></td>
        <td><%= link_to 'Destroy', order_item_path(@order, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Total: <%= number_to_currency(@order.total, precision: 0) %></p>

<br>

<td><%= link_to 'Agregar Productos', new_order_item_path(@order) %></td>
<% end %>
