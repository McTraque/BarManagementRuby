<%if user_signed_in?%>
<p id="notice"><%= notice %></p>

<hr class="divider">
<center><h1 style="color:#f2f2f2">Tipos de Productos</h1></center>

<table class="table">
  <thead class="thead-inverse">
    <tr style="color:#f2f2f2">
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr style="color:#f2f2f2">
        <td><%= product_type.name %></td>
        <td><%= link_to 'Mostrar', product_type %></td>
        <td><%= link_to 'Editar', edit_product_type_path(product_type) %></td>
        <td><%= link_to 'Eliminar', product_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo de producto', new_product_type_path %>
<hr>
<%= link_to 'Volver a productos', products_path %>
<% end %>
