<%= form_with(model: product_type, local: true) do |form| %>
  <% if product_type.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>Los siguientes errores no permiten continuar con la operaci√≥n:</h2>

      <ul>
      <% product_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrap-crud100">
    <%= form.text_field :name, id: :product_type_name, class:"input100", placeholder:"Nombre Del Producto"%>

    <div class="actions">
      <%= form.submit class:"crud100-form-btn", value:"Registrar"%>
    </div>
  </div>
<% end %>
