<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>Los siguientes errores no permiten continuar con la operaci√≥n:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="wrap-crud100">
  <div class="select100">
      <%= form.collection_select :bench_id, Bench.libre, :id, :number %>
  </div>

  <div class="actions">
    <%= form.submit class:"crud100-form-btn", value:"Registrar" %>
  </div>
</div>

<% end %>
