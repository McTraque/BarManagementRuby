<%= form_with(model: employee, local: true, url: (employee.new_record? ? employees_path : employee_path(employee))) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>Los siguientes errores no permiten continuar con la operación:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrap-crud100">
      <%= form.text_field :first_name, id: :first_name, class:"input100", placeholder:"Nombre Completo"%>

      <%= form.text_field :email, id: :employee_email, class:"input100", placeholder:"Correo"%>

      <%= form.select :role, :collection => User.roles.keys.to_a, class:"select100-padding" %>

      <%= form.password_field :password, id: :password, class:"input100", placeholder:"Contraseña"%>

    <div class="actions">
        <%= form.submit class:"crud100-form-btn", value:"Registrar" %>
    </div>
  </div>
<% end %>
