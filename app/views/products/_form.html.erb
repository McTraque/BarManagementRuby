<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrap-crud100">
      <%= form.text_field :name, id: :product_name, class:"input100", placeholder:"Nombre Del Producto" %>

      <div class="select100">
      <%= form.collection_select :product_type_id, ProductType.all, :id, :name, include_blank:"Tipo de Producto", class:"select100-padding"%>
        </div>

      <div class="select100">
        <%= form.collection_select :provider_id, Provider.enable, :id, :nombre_completo, include_blank:"Proveedor", class:"select100-padding" %>
      </div>

      <%= form.number_field :quantity, id: :product_quantity, class:"input100", placeholder:"Cantidad" %>

      <%= form.text_field :value, id: :product_value, class:"input100", placeholder:"Valor" %>

    <div class="actions">
      <%= form.submit class:"crud100-form-btn"%>
    </div>
  </div>

<% end %>
