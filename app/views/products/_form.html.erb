<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <h2>Los siguientes errores no permiten continuar con la operaci√≥n:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrap-crud100">
      <%= form.text_field :name, id: :product_name, class:"input100", placeholder:"Nombre Del Producto" %>

      <div class="select100">
      <%= form.collection_select :product_type_id, ProductType.all, :id, :name, include_blank: "-Elija un Producto-", class:"select100-padding"%>
        </div>

      <div class="select100">
        <%= form.collection_select :provider_id, Provider.enable, :id, :nombre_completo, include_blank:"Proveedor", class:"select100-padding" %>
      </div>

      <%= form.text_field :buy_value, id: :buy_value, class:"input100", placeholder:"Precio de compra" %>

      <%= form.text_field :sell_value, id: :sell_value, class:"input100", placeholder:"Precio de venta" %>

      <%= form.text_area :description, id: :description, class:"input100", placeholder:"Description" %>

    <div class="actions">
      <%= form.submit class:"crud100-form-btn", value:"Registrar"%>
    </div>
  </div>

<% end %>
