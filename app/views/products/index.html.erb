<p id="notice"><%= notice %></p>

<hr class="divider">
<h1 style="color:#f2f2f2"><center>Productos</center></h1>


<table class="table">
  <thead  class="thead-inverse">
    <tr style="color:#f2f2f2">
      <th>Nombre</th>
      <th>Tipo de producto</th>
      <th>Proveedor</th>
      <th>Cantidad</th>
      <th>Valor Unitario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr style="color:#f2f2f2">x
        <td><%= product.name %></td>
        <td><%= product.product_type.name %></td>
        <td><%= product.provider.nombre_completo %></td>
        <td><%= product.quantity %></td>
        <td><%= number_to_currency(product.value, precision: 0) %></td>
        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Modificar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar Producto', new_product_path %>
