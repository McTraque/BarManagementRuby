                <li class="nav-item px-lg-4">
                  <%=link_to "Comandas", orders_path, class: "nav-link text-uppercase text-expanded"%>
                </li>
                <% if current_user.admin? %>
                  <li class="nav-item px-lg-4">
                    <%=link_to "Empleados", employees_path, class: "nav-link text-uppercase text-expanded"%>
